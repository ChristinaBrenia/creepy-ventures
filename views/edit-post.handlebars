
<p>{{post.user.id}}</p>
<p>{{user_id}}</p>
{{#if (check_user post.user_id user_id)}}

<article class="m-3">
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <h2>
    Edit Post
  </h2>
  <form class="edit-post-form">
    <div class="form-group">
      <input name="postTitle" type="text" value="{{post.title}}" />
    </div>
    <div class="form-group">
      <textarea name="postBody" type="text">{{post.post_text}}</textarea>
    </div>
    <div class="form-group">
      <input name="postCity" type="text" value="{{post.city}}" />
    </div>
    <div class="form-group">
      <input name="postCountry" type="text" value="{{post.country}}" />
    </div>
    <button type="submit">Save post</button>
    <button type="button" class="delete-post-btn">Delete post</button>
  </form>
</article>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
{{/if}}
