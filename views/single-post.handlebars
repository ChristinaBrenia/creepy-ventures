<div class="container w-75">
  <div class="row justify-content-center m-2">
    <div class="card col-12">
      {{> post-info post}}
  
      {{post.favorite_count}} {{ post.favorite_count}} by you on {{ format_date post.created_at}}
      |
      <a href="/post/{{post.id}}">{{post.comments.length}} {{ post.comments.length}}</a>
    </div>
  </div>
</div>

{{#if loggedIn}}
<form class="comment-form m-3">
  <div class="form-group">
    <textarea name="comment-body"></textarea>
  </div>
  <button class="commentBtn" type="submit">add comment</button>
</form>

{{> comments post.comments}}


<script src="/javascript/comment.js"></script>
{{/if}}
