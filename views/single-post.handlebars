<div class="container w-75">
  <div class="row justify-content-center m-2">
    <div class="card col-12">
      {{> post-info post}}
  
      {{post.favorite_count}} {{ post.favorite_count}} by you on {{post.created_at}}
      |
      <a href="/post/{{post.id}}">{{post.comments.length}} {{ post.comments.length}}</a>
    </div>
  </div>
</div>

{{#if (check_user post.user.id user_id)}}

<article class="m-3">
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <h2>
    Edit Post
  </h2>
  <form class="edit-post-form">
    <div class="form-group">
      <input name="postTitle" type="text" value="{{post.title}}" />
    </div>
    <div class="form-group">
      <textarea name="postBody" type="text">{{post.post_text}}</textarea>
    </div>
    <div class="form-group">
      <input name="postCity" type="text" value="{{post.city}}" />
    </div>
    <div class="form-group">
      <input name="postCountry" type="text" value="{{post.country}}" />
    </div>
    <button type="submit">Save post</button>
    <button type="button" class="delete-post-btn">Delete post</button>
  </form>
</article>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
{{/if}}


{{#if loggedIn}}
<form class="comment-form m-3">
  <div class="form-group">
    <textarea name="comment-body"></textarea>
  </div>
  <button type="submit">add comment</button>
</form>

{{> comments post.comments}}

<script src="/javascript/comment.js"></script>
{{/if}}
